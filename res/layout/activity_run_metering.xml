<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ww.gridviewdemo.activity.Run50StartActivity" >

    <TextView
        android:id="@+id/tv_title_runMetering"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:background="#3F51B5"
        android:gravity="center"
        android:text="50米跑"
        android:textColor="#ffffff"
        android:textSize="20sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#FF909090" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:background="@android:color/white"
        android:gravity="center" >

        <TextView
            android:id="@+id/tv_Metering_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00.000"
            android:textSize="40sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#FF909090" />

    <LinearLayout
        android:id="@+id/ll_title_metering"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="invisible" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#808080" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#808080" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="#ffffff"
                android:gravity="center"
                android:text="序号"
                android:textSize="20sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:background="#ffffff"
                android:gravity="center"
                android:text="成绩"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>

    <ListView
        android:id="@id/android:list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4" >
    </ListView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2" >

        <Button
            android:id="@+id/btn_over"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/btn_reset"
            android:layout_marginRight="40dp"
            android:layout_toLeftOf="@+id/btn_reset"
            android:background="@drawable/circle_corner_button_selector"
            android:text="结束"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/btn_reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/circle_corner_button_selector"
            android:text="重置"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/btn_metering"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/btn_reset"
            android:layout_marginLeft="40dp"
            android:layout_toRightOf="@+id/btn_reset"
            android:background="@drawable/circle_corner_button_selector"
            android:text="计次"
            android:textColor="#ffffff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv"
            android:layout_alignLeft="@+id/btn_over"
            android:layout_alignRight="@+id/btn_over"
            android:layout_below="@+id/btn_over"
            android:gravity="center"
            android:text="【  F2  】" />

        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/btn_reset"
            android:layout_alignRight="@+id/btn_reset"
            android:layout_below="@+id/btn_reset"
            android:layout_marginTop="3dp"
            android:gravity="center"
            android:text="【  F3  】" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv"
            android:layout_alignLeft="@+id/btn_metering"
            android:layout_alignRight="@+id/btn_metering"
            android:layout_below="@+id/btn_metering"
            android:gravity="center"
            android:text="【  F1  】" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:gravity="right|bottom"
        android:text="@string/fpl"
        android:textSize="17sp" />

</LinearLayout>